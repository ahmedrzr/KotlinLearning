<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recyclerview.RecyclerViewFragment">

    <ScrollView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/demo1_btn"
                style="@style/recycler_demo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo1"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/demo2_btn"
                style="@style/recycler_demo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo2"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/demo3_btn"
                style="@style/recycler_demo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo3"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/demo4_btn"
                style="@style/recycler_demo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo4"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/demo5_btn"
                style="@style/recycler_demo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo5"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/demo6_btn"
                style="@style/recycler_demo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo6"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/demo7_btn"
                style="@style/recycler_demo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo7"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/demo8_btn"
                style="@style/recycler_demo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo8"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>